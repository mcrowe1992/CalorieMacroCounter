@model Calorie_Macro_Counter.Models.FoodItemIndexViewModel

@{
    ViewData["Title"] = "Index";
}

@{
    ViewData["Title"] = "Food Items";
}

<h1>Food Items</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Protein (g)</th>
            <th>Fat (g)</th>
            <th>Carbohydrates (g)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FoodItems)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Calories</td>
                <td>@item.Protein</td>
                <td>@item.Fat</td>
                <td>@item.Carbs</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Totals</h3>
<ul>
    <li>Total Calories: @Model.TotalCalories</li>
    <li>Total Protein: @Model.TotalProtein g</li>
    <li>Total Fat: @Model.TotalFat g</li>
    <li>Total Carbohydrates: @Model.TotalCarbohydrates g</li>
</ul>

<p>
    <a asp-action="Create">Create New</a>
</p>